<odoo>
    <data>
      <record id="sale_view_order_form_inherit_transport" model="ir.ui.view">
          <field name="name">sale.view_order_form.inherit.transport</field>
          <field name="model">sale.order</field>
          <field name="inherit_id" ref="sale.view_order_form"/>
          <field name="arch" type="xml">
              <xpath expr="//notebook/page[1]" position="after">
                  <page string="Transporte">
                      <group>
                          <group>
                              <field name="transport_id" />
                              <field name="driver_id" />
                              <field name="dni" />
                          </group>
                          <group>
                              <field name="chasis" />
                              <field name="acoplado" />
                          </group>
                      </group>
                  </page>
              </xpath>
          </field>
      </record>
        
        
    </data>
  </odoo>